	email = walter@carezone.com
[instaweb]
  httpd = webrick
[color]
  ui = true
[merge]
  tool = kdiff3
[gui]
  fontdiff = -family Consolas -size 13 -weight normal -slant roman -underline 0 -overstrike 0
  fontui = -family \"Abadi MT Condensed Light\" -size 16 -weight normal -slant roman -underline 0 -overstrike 0
[branch]
  autosetuprebase = remote
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

  c = commit
  ca = commit -a
  cam = commit --amend
  cama = commit -a --amend -C HEAD
  fx = commit --fixup
  fxa = commit -a --fixup

  # reset
  ## soft resets
  r = reset
  r1 = reset HEAD^
  r2 = reset HEAD^^
  ## hard resets
  rh = reset --hard
  rh1 = reset HEAD^ --hard
  rh2 = reset HEAD^^ --hard

  # shortcuts for commands
  a = add
  b = branch
  co = checkout
  cp = cherry-pick
  d = diff
  f = fetch
  l = log
  m = merge
  mt = mergetool
  poh = push origin HEAD
  r = reset
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase -i
  s = status
[rebase]
  autosquash = true
[core]
	quotepath = false
[push]
	default = simple
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
