function sum() { SUM=0; while read NUM; do SUM=$(($SUM+$NUM)); done; echo $SUM; }

# cdd x will do cd ../x
alias cdd="cd `basename \`pwd\``"

#alias vnice="ionice -n7 nice -n20"
vnice() {
        if test -z "$1" ; then
                echo "vnice [ <pid> | <program> ]" >&2
                return 1
        elif ( echo "$1" | grep -q '^[0-9]*$' ) ; then
                ionice -n7 -p $1
                renice 20 $1
        else
                ionice -n7 nice -n20 $@
        fi
}

alias g=git
function gstart() { git checkout -b "$1" master }
function gfinish() { git checkout "$1" && git rebase master && git checkout master && git merge "$1" && git branch -d "$1" }
function gpull() { oldrev=`git rev-parse origin/master`; git pull && git log --oneline $oldrev..origin/master }

